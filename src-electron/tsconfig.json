{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "commonjs",
		"resolveJsonModule": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"sourceMap": false,
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true
	},
	"include": ["src/**/*.ts", "src/**/*.js"]
}
